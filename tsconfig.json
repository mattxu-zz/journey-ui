{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "esnext",
        "outDir": "dist",
        "target": "es6",
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}